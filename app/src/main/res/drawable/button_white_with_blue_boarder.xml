<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="6dip" />

            <stroke android:width="1dip" android:color="@color/btn_select" />

            <gradient android:angle="-90" android:endColor="@color/btn_select" android:startColor="@color/btn_select" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="6dip" />

            <stroke android:width="1dip" android:color="@color/btn_select" />

            <solid android:color="@color/btn_select" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="6dip" />

            <stroke android:width="1dip" android:color="@color/main_blue" />

            <gradient android:angle="-90" android:endColor="@android:color/white" android:startColor="@android:color/white" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="6dip" />

            <stroke android:width="1dip" android:color="@color/bg_gray" />


            <gradient android:angle="-90" android:endColor="@color/bg_gray" android:startColor="@color/bg_gray" />
        </shape>
    </item>

</selector>